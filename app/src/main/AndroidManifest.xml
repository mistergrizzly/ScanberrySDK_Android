<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mistergrizzly.scanberryskdandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".ScanBerryApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".edit.EditDocumentActivity" android:screenOrientation="portrait"/>
        <activity android:name=".detection.DocumentDetectionActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>